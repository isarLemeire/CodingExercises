{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build ggd",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-O0",
                "-Wall",
                "-fsanitize=address",
                "-fno-omit-frame-pointer",
                "ggd.c",
                "-o",
                "ggd.exe",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "run ggd (+ build)",
            "type": "shell",
            "command": "./ggd.exe",
            "dependsOn": [ "build ggd" ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                // Show and focus the terminal after running, so you can immediately type without having to click the terminal.
                "focus": true,
                "reveal": "always",
            },
        },
